<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Projeto 2</title>
</head>
<body>
    Artista
    <a href="/admin">Página Inicial</a>
    <a href="/admin/artista/adicionar">Adicionar</a>
    <a href="/admin/artista/listar">Listar</a>
    <form method="post">
        <input type="text" class="pesquisa" name="pesquisa" placeholder="Digite o nome do álbum que deseja pesquisar.">
        <input type="submit" value="Pesquisar">
    </form>
    <table>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Data de Nascimento</th>
            <th>Foto</th>
            <th>Álbum</th>
            <th>Single</th>
            <th>Editar</th>
            <th>Deletar</th>
        </tr>
        <% Artistas.forEach(function (artista) { %>
        <tr>
            <td><%=artista._id%></td>
            <td><%=artista.nome%></td>
            <td><%=artista.nascimento%></td>
            <td><img src="/fotos/<%=artista.foto%>" alt="Capa do álbum"></td>
            <td>
                <% artista.albuns.forEach(function (album) { %>
                <%=album.nome%><br>
                <% }) %>
            </td>
            <td>
                <% artista.singles.forEach(function (single) { %>
                <%=single.nome%><br>
                <% }) %>
            </td>
            <td><a href="/admin/artista/editar/<%=artista._id%>">Editar</a></td>
            <td><a href="/admin/artista/deletar/<%=artista._id%>">Deletar</a></td>
        </tr>
        <% }) %>
    </table>
</body>
</html>
